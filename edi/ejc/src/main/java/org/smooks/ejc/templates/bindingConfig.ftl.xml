<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd"
                      xmlns:jb="http://www.milyn.org/xsd/smooks/javabean-1.2.xsd"
                      xmlns:edi="http://www.milyn.org/xsd/smooks/edi-1.2.xsd">

    <!--
        Generated by Smooks EJC (Edifact Java Compiler).
    -->

    <params>
        <param name="stream.filter.type">SAX</param>
    </params>

    <edi:reader mappingModel="/${classPackage}/edimappingconfig.xml" validate="false" />

    <#list beanConfigs as beanConfig>

    <jb:bean beanId="${beanConfig.beanId}" class="${beanConfig.runtimeClass.name}" createOnElement="${beanConfig.createOnElement}">
    <#list beanConfig.valueBindings as valueBinding>
        <#if valueBinding.decoderConfigs?exists>
        <jb:value property="${valueBinding.property.name}" data="${valueBinding.dataSelector}" decoder="${valueBinding.decoderType}" default="null">
        <#list valueBinding.decoderConfigs as config>
            <jb:decodeParam name="${config.key}">${config.value}</jb:decodeParam>
        </#list>
        </jb:value>
        <#elseif valueBinding.decoderType?exists>
        <jb:value property="${valueBinding.property.name}" data="${valueBinding.dataSelector}" decoder="${valueBinding.decoderType}" default="null" />
        <#else>
        <jb:value property="${valueBinding.property.name}" data="${valueBinding.dataSelector}" default="null"/>
        </#if>
    </#list>
    <#list beanConfig.wireBindings as binding>
        <jb:wiring <#if binding.propertyOnParent??>property="${binding.propertyOnParent.name}" </#if>beanIdRef="${binding.beanId}" />
    </#list>
    </jb:bean>
    </#list>

</smooks-resource-list>
