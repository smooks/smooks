<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%-5p %d{dd-MM HH:mm:ss,SSS} (%F:%M:%L)  %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
<!--        <Logger name="org.smooks" level="debug"/>-->

        <Root>
            <AppenderRef ref="Console" level="debug"/>
        </Root>
    </Loggers>
</Configuration>