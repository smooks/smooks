<?xml version="1.0"?>

<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd" default-target-profile="*">

	<resource-config selector="context-object" selector-namespace="http://milyn.codehaus.org/smooks">
	    <resource>org.smooks.delivery.dom.serialize.ContextObjectSerializationUnit</resource>
	</resource-config>

    <resource-config selector="ghost-element" selector-namespace="http://milyn.codehaus.org/smooks">
        <resource>org.smooks.delivery.dom.serialize.GhostElementSerializationUnit</resource>
    </resource-config>

    <resource-config selector="text" selector-namespace="http://milyn.codehaus.org/smooks">
        <resource>org.smooks.delivery.dom.serialize.TextSerializationUnit</resource>
        <param name="entities.rewrite">false</param>
    </resource-config>

</smooks-resource-list>
