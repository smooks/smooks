<?xml version="1.0"?>
<smooks-resource-list xmlns="https://www.smooks.org/xsd/smooks-1.2.xsd" default-selector-namespace="https://www.smooks.org/xsd/smooks/validation-1.1.xsd">

    <resource-config selector="rule">
        <resource>org.milyn.cdr.extension.NewResourceConfig</resource>
        <param name="resource">org.milyn.validation.Validator</param>
    </resource-config>
    
    <resource-config selector="rule">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">executeOn</param>
        <param name="mapTo">selector</param>
    </resource-config>
  
    <resource-config selector="rule">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">executeOnNS</param>
        <param name="mapTo">selector-namespace</param>
    </resource-config>
    
    <resource-config selector="rule">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">name</param>
    </resource-config>

    <resource-config selector="rule">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">onFail</param>
    </resource-config>
        

</smooks-resource-list>