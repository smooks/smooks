<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd" default-selector-namespace="http://www.milyn.org/xsd/smooks/validation-1.0.xsd">

    <resource-config selector="rule">
        <resource>org.smooks.cdr.extension.NewResourceConfig</resource>
        <param name="resource">org.smooks.validation.Validator</param>
    </resource-config>
    
    <resource-config selector="rule">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">executeOn</param>
        <param name="mapTo">selector</param>
    </resource-config>
  
    <resource-config selector="rule">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">executeOnNS</param>
        <param name="mapTo">selector-namespace</param>
    </resource-config>
    
    <resource-config selector="rule">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">name</param>
    </resource-config>

    <resource-config selector="rule">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">onFail</param>
    </resource-config>
        

</smooks-resource-list>