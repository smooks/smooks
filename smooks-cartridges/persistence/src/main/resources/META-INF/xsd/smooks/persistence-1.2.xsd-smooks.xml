    </resource-config>

    <resource-config selector="deleter">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">dao</param>
    </resource-config>

    <resource-config selector="deleter">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
