<smooks-resource-list xmlns="https://www.smooks.org/xsd/smooks-1.2.xsd" default-selector-namespace="https://www.smooks.org/xsd/smooks/dmb-1.5.xsd">

    <!--
        Bean Writer Resource...
    -->

    <resource-config selector="writer">
        <resource>org.smooks.cdr.extension.NewResourceConfig</resource>
        <param name="resource">org.smooks.javabean.dynamic.ext.BeanWriterFactory</param>
    </resource-config>

    <resource-config selector="writer">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">beanId</param>
    </resource-config>

    <resource-config selector="writer">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">beanClass</param>
    </resource-config>

    <resource-config selector="writer">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">class</param>
    </resource-config>

    <resource-config selector="writer/param" selector-namespace="https://www.smooks.org/xsd/smooks-1.2.xsd">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromText</resource>
        <param name="mapToSpecifier">name</param>
    </resource-config>

    <resource-config selector="writer">
        <resource>org.smooks.javabean.dynamic.ext.BeanClassLookup</resource>
    </resource-config>

</smooks-resource-list>