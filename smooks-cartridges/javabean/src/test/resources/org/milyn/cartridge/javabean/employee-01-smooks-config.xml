<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd">

    <resource-config selector="Employee">
        <resource>org.milyn.cartridge.javabean.BeanPopulator</resource>
        <param name="beanId">employee</param>
        <param name="beanClass">org.milyn.cartridge.javabean.Employee</param>
        <param name="bindings">
        	<binding property="firstName" selector="firstname" />
        	<binding property="lastName" selector="lastname" />
        	<binding property="employeeId" selector="empId" />
		</param>
    </resource-config>

</smooks-resource-list>