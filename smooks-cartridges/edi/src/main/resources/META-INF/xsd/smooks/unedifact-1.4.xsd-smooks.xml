<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd" default-selector-namespace="http://www.milyn.org/xsd/smooks/unedifact-1.4.xsd">

    <!-- Configure the Model Loader -->

    <resource-config selector="reader">
        <resource>org.smooks.cdr.extension.NewResourceConfig</resource>
        <param name="resource">org.smooks.edi.ModelLoader</param>
    </resource-config>

    <resource-config selector="reader">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">mappingModel</param>
    </resource-config>

    <!-- Configure the UNEdifactReader -->

    <resource-config selector="reader">
        <resource>org.smooks.cdr.extension.NewResourceConfig</resource>
        <param name="resource">org.smooks.edi.unedifact.UNEdifactReader</param>
    </resource-config>

    <resource-config selector="reader">
        <resource>org.smooks.cdr.extension.SetOnResourceConfig</resource>
        <param name="setOn">selector</param>
        <param name="value">org.xml.sax.driver</param>
    </resource-config>

    <resource-config selector="reader">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">mappingModel</param>
    </resource-config>
    
    <resource-config selector="reader">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">ignoreNewLines</param>
    </resource-config>

    <resource-config selector="reader">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">ignoreEmptyNodes</param>
        <param name="defaultValue">false</param> <!-- This maintains backward compatibility  - 1.5 namespace default it "true" -->
    </resource-config>

    <resource-config selector="reader">
        <resource>org.smooks.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">validate</param>
    </resource-config>

</smooks-resource-list>