    <name>Milyn :: Smooks Example :: JMS Router (Provider)</name>
    <artifactId>milyn-smooks-example-jms-router-provider</artifactId>
    <packaging>bundle</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.activemq.tooling</groupId>
                <artifactId>maven-activemq-plugin</artifactId>
                <configuration>
                    <configFile>./activemq.xml</configFile>
                    <fork>false</fork>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
