<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.codehaus</groupId>
        <artifactId>codehaus-parent</artifactId>
        <version>3</version>
    </parent>

    <groupId>org.milyn</groupId>
    <artifactId>smooks-examples</artifactId>
    <name>Milyn Smooks Examples (Base POM)</name>
    <packaging>pom</packaging>
    <version>1.5-SNAPSHOT</version> <!-- base pom version - do not remove this comment -->

    <profiles>
        <profile>
            <id>all</id>
            <modules>
                <module>xslt-basic</module>
                <module>xslt-groovy</module>
                <module>xslt-namespaces</module>
                <module>java-basic</module>
                <module>xml-to-java</module>
                <module>xml-to-java-virtual</module>
                <module>model-driven-basic</module>
                <module>model-driven-basic-virtual</module>
                <module>java-to-xml</module>
                <module>java-to-java</module>
                <module>csv-to-xml</module>
                <module>csv-to-xml-2</module>
                <module>csv-to-java</module>
                <module>csv-to-java-programmatic</module>
                <module>fixed-length-to-java</module>
                <module>edi-to-xml</module>
                <module>edi-to-java</module>
                <module>profiling</module>
                <module>db-extract-transform-load</module>
                <module>file-router</module>
                <module>freemarker-huge-transform</module>
                <module>groovy</module>
                <module>jms-router</module>
                <module>json-to-java</module>
                <module>sj-testimonial</module>
                <module>dao-router</module>
                <module>validation-basic</module>
                <module>edi-with-import-to-java</module>
                <module>yaml-to-java</module>
                <module>dynamic-model-builder</module>
                <module>camel</module>
                <module>osgi</module>
                <module>csv-to-xls</module>
            </modules>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>deploy</id>
            <modules>
                <!--
                 Don't deploy any of the examples.  Only deploy the
                 exmaples base POM...
                -->
            </modules>
        </profile>
    </profiles>

    <properties>
        <milyn.smooks.core.version>1.5-SNAPSHOT</milyn.smooks.core.version> <!-- ## Smooks Version ## -->
        <milyn.smooks.servlet.version>${milyn.smooks.core.version}</milyn.smooks.servlet.version>
        <milyn.smooks.misc.version>${milyn.smooks.core.version}</milyn.smooks.misc.version>
        <milyn.smooks.dtd.version>${milyn.smooks.core.version}</milyn.smooks.dtd.version>
        <milyn.smooks.css.version>${milyn.smooks.core.version}</milyn.smooks.css.version>
        <milyn.smooks.javabean.version>${milyn.smooks.core.version}</milyn.smooks.javabean.version>
        <milyn.smooks.templating.version>${milyn.smooks.core.version}</milyn.smooks.templating.version>
        <milyn.smooks.csv.version>${milyn.smooks.core.version}</milyn.smooks.csv.version>
        <milyn.smooks.fixed-length.version>${milyn.smooks.core.version}</milyn.smooks.fixed-length.version>
        <milyn.smooks.edi.version>${milyn.smooks.core.version}</milyn.smooks.edi.version>
        <milyn.smooks.scripting.version>${milyn.smooks.core.version}</milyn.smooks.scripting.version>
        <milyn.smooks.routing.version>${milyn.smooks.core.version}</milyn.smooks.routing.version>
        <milyn.smooks.json.version>${milyn.smooks.core.version}</milyn.smooks.json.version>
		<milyn.smooks.persistence.version>${milyn.smooks.core.version}</milyn.smooks.persistence.version>
		<milyn.scribe.jpa.version>${milyn.smooks.core.version}</milyn.scribe.jpa.version>
		<milyn.scribe.ibatis.version>${milyn.smooks.core.version}</milyn.scribe.ibatis.version>
        <milyn.smooks.validation.version>${milyn.smooks.core.version}</milyn.smooks.validation.version>
        <milyn.smooks.ejc.version>${milyn.smooks.core.version}</milyn.smooks.ejc.version>
        <milyn.smooks.yaml.version>${milyn.smooks.core.version}</milyn.smooks.yaml.version>
        <milyn.smooks.camel.version>${milyn.smooks.core.version}</milyn.smooks.camel.version>
        <camel.version>2.4.0</camel.version>
        <spring.version>2.5.6</spring.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.milyn</groupId>
            <artifactId>testres</artifactId>
            <version>${milyn.smooks.core.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.milyn</groupId>
            <artifactId>milyn-smooks-core</artifactId>
            <version>${milyn.smooks.core.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>dtdparser</groupId>
                    <artifactId>dtdparser</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.4</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptor>src/main/assembly/dep.xml</descriptor>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>
                <configuration>
                    <executable>java</executable>
                    <mainClass>example.Main</mainClass>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/dependencies</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </testResource>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
        </testResources>
    </build>

</project>
