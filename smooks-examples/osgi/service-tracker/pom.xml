<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.milyn</groupId>
        <artifactId>smooks-examples-parent</artifactId>
	<version>${smooks.version}</version>
        <relativePath>../../parent/pom.xml</relativePath>
    </parent>

    <name>Milyn :: Smooks Example :: Service-tracker</name>
    <artifactId>milyn-smooks-example-service-tracker</artifactId>
    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>org.milyn</groupId>
            <artifactId>milyn-smooks-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi_R4_compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi_R4_core</artifactId>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <configuration>
                    <provision>
                        <param>--log=true</param>
                        <param>--platform=felix</param>
                        <param>--workingDirectory=target/runner</param>
                    </provision>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Activator>example.activator.MainActivator</Bundle-Activator>
                        <Export-Package>example.model;version="${project.version}",
                            example.activator;version="${project.version}"
                        </Export-Package>
                        <Import-Package>org.milyn.*;version="${project.version}",
                            javax.xml.transform.stream,
                            example.model;version="${project.version}",
                            example.activator;version="${project.version}",
                            *;-nouses:=true
                        </Import-Package>
                        <Private-Package>example</Private-Package>
                        <Smooks-Config>${basedir}/smooks-config.xml</Smooks-Config>
                        <Smooks-Input-File>${basedir}/input-message.xml</Smooks-Input-File>
                        <IncludeResource>src/main/java/example/groovy/Test.groovy</IncludeResource>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
