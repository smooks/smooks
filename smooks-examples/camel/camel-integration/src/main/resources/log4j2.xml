<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console">
            <PatternLayout pattern="%d{ABSOLUTE} %-5p [%t][%c{1}] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.milyn" level="error"/>
        <Logger name="org.milyn.javabean" level="error"/>
        <Logger name="org.milyn.cdr.xpath" level="debug"/>
        <Logger name="freemarker" level="error"/>
        <Logger name="org.apache.activemq" level="info"/>
        <Logger name="org.hsqldb" level="debug"/>
        <Logger name="org.apache.camel" level="info"/>
        <Logger name="example" level="info"/>

        <Root>
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>